datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  routes    Route[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Route {
  createdAt           DateTime @default(now())
  distance            Float?
  endLocation         String?
  estimatedTravelTime Int?
  id                  String   @id @default(cuid())
  routeName           String?
  startLocation       String?
  stops               Stop[]
  updatedAt           DateTime @updatedAt
  user                User?    @relation(fields: [userId], references: [id])
  userId              String?
}

model Stop {
  createdAt    DateTime @default(now())
  id           String   @id @default(cuid())
  latitude     Float?
  locationName String?
  longitude    Float?
  route        Route?   @relation(fields: [routeId], references: [id])
  routeId      String?
  updatedAt    DateTime @updatedAt
}
